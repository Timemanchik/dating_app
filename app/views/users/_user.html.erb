<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Age:</strong>
    <%= (Date.today.strftime('%Y%m%d').to_i - user.birth.strftime('%Y%m%d').to_i) / 10000 %>
  </p>

  <p>
    <strong>Sex:</strong>
    <%= user.sex %>
  </p>

  <p>
    <strong>Work:</strong>
    <% unless user.work.nil? %>
      <%= user.work.title %>
    <% end %>
  </p>

  <p>
    <strong>Yourself:</strong>
    <%= user.yourself %>
  </p>

  <p>
    <strong>Hobbies:</strong>
    
    <% if user.hobbies != [] %>
      <% user.hobbies.each do |hobby| %>
        <% if user.hobbies.last == hobby %>
          <%= "#{hobby.title}" %>
        <% else %>
          <%= "#{hobby.title}, " %>
        <% end %>
      <% end %> 
    <% end %>
  </p>  

  <p>
    <strong>Latitude:</strong>
    <%= user.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= user.longitude %>
  </p>

  <p>
    <strong>Foto:</strong>  
  </p>
    <div class="foto-main-wrapper">
    <% user.foto.each do |foto| %>
       <div class="foto-preview-wrapper"><%= image_tag foto, class: "foto-preview" %></div>
    <% end %>
    </div>

</div>
