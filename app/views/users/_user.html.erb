<div id="<%= dom_id user %>">
  <p>
    <strong>First name:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Last name:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Birth:</strong>
    <%= user.birth %>
  </p>

  <p>
    <strong>Sex:</strong>
    <% if user.sex %>
      man
    <% else %>
      woman
    <% end %>
  </p>

  <p>
    <strong>Work:</strong>
    <% if !user.work.nil? %>
      <%= user.work.title %>
    <% else %>
      <strong></strong>
    <% end %>
  </p>

  
    <strong>Yourself:</strong>
    <%= user.yourself %>
  </p>
  
  <p>
    <strong>Hobby:</strong>
    
    <% if user.hobbies != [] %>
      <% user.hobbies.each do |hobby| %>
        <% if user.hobbies.last == hobby %>
          <%= "#{hobby.title}" %>
        <% else %>
          <%= "#{hobby.title}, " %>
        <% end %>
      <% end %> 
    <% end %>
  </p> 

  <p>
    <strong>Latitude:</strong>
    <%= user.latitude %>
  </p>

  <p>
    <strong>Longitude:</strong>
    <%= user.longitude %>
  </p>

  <p>
    <strong>Foto:</strong>
    <% user.foto.each do |foto| %>
       <div><%= image_tag foto, class: "foto-preview" %></div>
    <% end %>
  </p>

</div>
