<div id="chatroom_container" class="container">
  <div class="d-flex justify-content-center">
    <div id="room_container">
      <% if @single_room %>
        <div id="single_room" >
          <h4 class="text-center"> <%= @user&.first_name || @single_room.name %></h4>
          <%= turbo_stream_from @single_room %>
          <div id="messages">
            <%= render @single_room.messages %>
          </div>
          <%= render 'shared/new_message_form' %>
          <div class="chat-button">
            <%= link_to 'Close', matches_user_path(current_user), class: 'action-button shadow animate red' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>

<script>
  var objDiv = document.querySelector("#messages");
  objDiv.scrollTop = objDiv.scrollHeight;
</script>