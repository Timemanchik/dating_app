<div class="main-content">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div>
    <%= f.label :first_name, style: "display: block" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, style: "display: block" %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :birth, style: "display: block" %>
    <%= f.date_field :birth %>
  </div>

  <div>
    <%= f.label :sex, style: "display: block" %>
    <%= f.radio_button :sex, true %>
    <%= f.label :sex, "man" %>
    <%= f.radio_button :sex, false %>
    <%= f.label :sex, "woman" %>
  </div>

  <div>
    <%= f.label :work_id, style: "display: block" %>
    <%= f.select :work_id, options_for_select(Work.all.collect { |work| [work.title, work.id] }) %>
  </div>

  <div>
    <%= f.label "Hobby:", style: "display: block" %> 
    <%= f.select :hobbies, options_for_select(Hobby.all.collect { |hobby| [hobby.title, hobby] }, {prompt: '-Select-', multiple: true}) %>
    <%= f.collection_select(:hobby_ids, Hobby.all, :id, :title, prompt: '-Select-', multiple: true) %>
    <br>
    <% Hobby.all.each do |hobby| %>
     <%= check_box :hobby_users, hobby.title, value: hobby.id %>
     <%= label :hobby_users, hobby.title %>
     <br>
    <% end %>
    
  <% fields_for :hobby_users do |hobby_users| %>
    <%= hobby_users.label :hobbies %>
    <%= hobby_users.select(:hobbies, Hobby.all.collect {|t| [t.title, t.id]}, {}, {multiple: true}) %>
  <% end %>
   
