<div class="main-content">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div>
    <%= f.label :first_name, style: "display: block" %>
    <%= f.text_field :first_name %>
  </div>

  <div>
    <%= f.label :last_name, style: "display: block" %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :birth, style: "display: block" %>
    <%= f.date_field :birth %>
  </div>

  <div>
    <%= f.label :sex, style: "display: block" %>
    <%= f.radio_button :sex, 'Male' %>
    <%= f.label :sex, 'Male' %>
    <%= f.radio_button :sex, 'Female' %>
    <%= f.label :sex, 'Female' %>
  </div>

  <div>
    <%= f.label :work_id, style: "display: block" %>
    <%= f.select :work_id, options_for_select(Work.all.collect { |work| [work.title, work.id] }), {include_blank: '-Select work-'} %>
  </div>

  <div>
    <%= f.label :yourself, style: "display: block" %>
    <%= f.text_area :yourself %>
  </div>

  <div>
    <%= f.label :hobbies, style: "display: block" %> 
    <%= f.collection_check_boxes(:hobby_ids, Hobby.all, :id, :title, {}, multiple: true) %> 
  </div>

  <div class="hidden-item">
    <%= f.label :latitude, style: "display: block" %>
    <%= f.text_field :latitude %>
  </div>

  <div class="hidden-item">
    <%= f.label :longitude, style: "display: block" %>
    <%= f.text_field :longitude %>
  </div>

  <div>
    <%= f.label :foto, style: "display: block" %>
    <%= f.file_field :foto, multiple: true, class: 'action-button shadow animate red' %>
  </div>

    <p>
    <strong>Foto:</strong> 
    </p>
    <div class="foto-main-wrapper">
    <% @user.foto.each do |foto| %>
      <% unless foto.id.nil? %>
        <div class="foto-preview-wrapper">
        <%= image_tag foto, class: "foto-preview" %>
        <%= link_to "", purge_attachments_path(foto), data: { turbo_method: :delete }%>
        </div>
      <% end %>
    <% end %>
    </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="edit-btn">
  <div class="actions">
    <%= f.submit "Update" , class: 'action-button shadow animate red'%>
  </div>
<% end %>

  <%= button_to "Delete my account", registration_path(resource_name), form: {data: { turbo_confirm: "Are you sure?" }}, method: :delete, class: 'action-button shadow animate yellow' %>

  <%= link_to "Back", :back, class: 'action-button shadow animate red' %>
  <%= link_to "Profile", user_path(@user), class: 'action-button shadow animate red' %>
  </div>
</div>
